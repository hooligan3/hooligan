table{
    border-spacing:0;
    -webkit-box-shadow: 1px 1px 10px 5px #757575;
    box-shadow: 1px 1px 10px 5px #757575;
}
thead>tr:first-child{
    background:#7F6DB0;
    
}
thead>tr>th{
    padding:5px;
    border-bottom:slolid 1px #D9D9D9;
}
tr>td{
    text-align:center;
    padding:5px 20px;
}
tbody>tr{
    background:#DBCFF8;
}
tbody>tr:hover{
    background:#7F6DB0;
    color:white;
}